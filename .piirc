use List::MoreUtils qw(uniq);
use Dominion::Game;

$g = Dominion::Game->new;
$s = $g->supply;
$p = Dominion::Player->new(name => 'Martyn');
$p2 = Dominion::Player->new(name => 'Fred');

$g->player_add($p);
$g->player_add($p2);

sub supply {
    uniq map { ref } $s->cards;
}

sub cards {
    my ($player) = @_;
    {
        play    => [ map { ref } $player->play->cards ],
        hand    => [ map { ref } $player->hand->cards ],
        discard => [ map { ref } $player->discard->cards ],
        deck    => [ map { ref } $player->deck->cards ],
    }
}
